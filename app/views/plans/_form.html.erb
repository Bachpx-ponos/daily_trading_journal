<%= form_with(model: plan, local: true, role: "form", html: {class: 'form-horizontal'}) do |form| %>
  <div class="form-body">
    <div class="form-body">
      <% if plan.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(plan.errors.count, "error") %> prohibited this plan from being saved:</h2>
          <ul>
          <% plan.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <span for="title" class="col-sm-1 btn btn-primary nohover">
          plan
        </span>
        <div class="col-sm-4">
          <%= select_tag 'parent', options_for_select(nested_set_options(plan) {|i| "#{'__'* (i.level.to_i).abs} #{i.slug.present? ? i.slug : 'root'}" }, @plan.id.present? ? @plan.parent_id : params[:parent]) , { :class => 'form-control select2_category' }%>
        </div>
      </div>

      <div class="form-group">
        <span class="col-sm-1 btn btn-primary nohover" id="title">Tên</span>
        <div class="col-sm-11">
          <%= form.text_field :title, autocomplete: "off", id: "title", class: "form-control" %>
        </div>
      </div>

      <div class="form-actions">
        <div style="text-align: center">
            <button type="submit" class="col-sm-1 btn btn-info">Lưu</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
