<div class="portlet box <%= random_color %> portlet-fullscreen" style="background-color: white;">
  <div class="portlet-title">
    <div class="caption">
      <i class="fa fa-gift"></i><%= @glossary.title %>
    </div>
    <div class="actions">
      <a href="<%= edit_glossary_path(id: @glossary.id) %>" class="btn btn-default btn-sm">
        <i class="fa fa-pencil"></i>  </a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="span4" style="overflow: auto;">
      <div class="post-article markdown">
        <%= markdown @glossary.brief.html_safe %>
      </div>
    </div>
    <div class="wiki-content">
      <%= @glossary.content.html_safe %>
    </div>
  </div>
</div>