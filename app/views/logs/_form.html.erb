<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title heading">
        <strong><%= t "log.modal.create" %></strong><span></span>
      </h4>
    </div>
    <%= form_with(model: log, local: true, remote: true) do |f| %>
      <% if log.errors.any? %>
      <ul>
        <% log.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :money, "Số tiền" %>
          <%= f.number_field :money, class: "form-control",
            placeholder: "Please input money" %>
        </div>
        <div class="form-group">
          <%= f.label :note, "Ghi chu" %>
          <%= f.text_area :money, class: "form-control",
            placeholder: "Please input money" %>
        </div>
        <div class="form-group">
          <%= f.radio_button :status, :break_even, :checked => true %>
          <%= f.label :status, "Hòa vốn" %>
          <%= f.radio_button :status, :interest %>
          <%= f.label :status, "Lợi nhuận" %>
          <%= f.radio_button :status, :loss %>
          <%= f.label :status, "Cắt lỗ" %>
        </div>
        <div class="form-group">
          <%= f.label :result, "Kết quả" %>
          <%= f.number_field :money, class: "form-control",
            placeholder: "Nhập kết quả" %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Thực hiện", class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

