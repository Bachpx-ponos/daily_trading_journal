<p id="notice"><%= notice %></p>
<div class="profile-content">
  <div class="row">
    <div class="col-md-12">
      <div class="portlet light bordered">
        <div class="portlet-title tabbable-line">
          <div class="caption caption-md">
            <ul class="nav nav-tabs">
              <% Tag.find_by(title: 'Wiki categories').children.each_with_index do |tag, index| %>
                <li class="<%= index == 0 ? 'active' : ''%>">
                  <a href="<%= "#tab-#{ tag.id }" %>" data-toggle="tab" aria-expanded="false"><%= tag.slug %></a>
                </li>
              <% end %>
            </ul>
          </div>
          <div class="portlet-body">
            <div class="tab-content">
              <% Tag.find_by(title: 'Wiki categories').children.each_with_index do |tag, index| %>
                <div class="tab-pane <%= index == 0 ? 'active' : ''%>" id="<%= "tab-#{ tag.id }" %>">
                  <div class="col-md-12" style="padding: 0px;">
                    <!-- BEGIN Portlet PORTLET-->
                    <div class="portlet box <%= random_color index %>">
                      <div class="portlet-title">
                        <div class="caption">
                          <i class="fa fa-gift"></i>Notes...</div>
                        <div class="tools">
                          <a href="javascript:;" class="collapse" data-original-title="" title=""> </a>
                          <a href="" class="fullscreen" data-original-title="" title=""> </a>
                        </div>
                      </div>
                      <div class="portlet-body">
                        <%= markdown tag.content %>
                        <div class="row">
                          <% tag.wikis.each_with_index do |wiki, index| %>
                            <div class="col-md-4">
                              <div class="portlet box <%= random_color %>">
                                <div class="portlet-title">
                                  <div class="caption">
                                    <i class="fa fa-gift"></i><%= wiki.title %> 
                                  </div>
                                  <div class="tools">
                                    <a href="javascript:;" class="expand" data-original-title="" title=""> </a>
                                    <a href="" class="fullscreen" data-original-title="" title=""> </a>
                                  </div>
                                  <div class="actions">
                                    <a href="<%= edit_wiki_path wiki %>" class="btn btn-default btn-sm">
                                      <i class="fa fa-pencil"></i> Sá»­a </a>
                                  </div>
                                </div>
                                <div class="portlet-body" style="display: none;">
                                  <div class="slimScrollDiv" style="position: relative; overflow: auto; width: auto; height: 200px;">
                                    <div class="scroller" style="height: 200px; overflow: auto; width: auto;" data-always-visible="1" data-rail-visible="1" data-rail-color="blue" data-handle-color="red" data-initialized="1">
                                      <div class="post-article markdown">
                                        <%= markdown wiki.brief.html_safe %>
                                      </div>

                                      <%= wiki.content.html_safe %>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
