<p id="notice"><%= notice %></p>

<h1>Trades</h1>

<table>
  <thead>
    <tr>
      <th>Coin</th>
      <th>Status</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Reason</th>
      <th>Trade method normal</th>
      <th>Trade pyramid method</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trades.each do |trade| %>
      <tr>
        <td><%= trade.coin %></td>
        <td><%= trade.status %></td>
        <td><%= trade.start_date %></td>
        <td><%= trade.end_date %></td>
        <td><%= trade.reason %></td>
        <td><%= link_to 'Show', trade %></td>
        <td><%= link_to 'Edit', edit_trade_path(trade) %></td>
        <td><%= link_to 'Destroy', trade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

